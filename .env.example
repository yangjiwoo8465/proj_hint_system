# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=hint_system
DB_USER=hint_user
DB_PASSWORD=your-db-password
DB_HOST=db
DB_PORT=3306

# ChromaDB
CHROMA_DB_PATH=/app/vectordb/chroma_data
CHROMA_COLLECTION_NAME=python_docs

# Code Execution
CODE_EXECUTION_TIMEOUT=5
CODE_EXECUTION_MAX_OUTPUT=10000

# ==================== Hint Service 설정 ====================

# 힌트 실행 모드
# - local: Django 서버 내에서 직접 LangGraph 실행 (기본값)
# - runpod: Runpod Serverless로 힌트 생성 위임
HINT_EXECUTION_MODE=local

# Runpod Serverless 설정 (HINT_EXECUTION_MODE=runpod 일 때 필요)
# Runpod 콘솔에서 Endpoint 생성 후 ID와 API Key를 입력하세요
# https://www.runpod.io/console/serverless
RUNPOD_ENDPOINT_ID=your-runpod-endpoint-id
RUNPOD_API_KEY=your-runpod-api-key

# OpenAI API 설정 (힌트 생성에 사용)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4.1
