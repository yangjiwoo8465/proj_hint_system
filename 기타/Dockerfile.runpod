# RunPod 배포용 Dockerfile (GPU 지원)
FROM nvidia/cuda:12.1.0-cudnn8-devel-ubuntu22.04

# 환경변수 설정
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV MODEL_PATH=/workspace/models/qwen2.5-coder-32b

# 시스템 패키지 설치
RUN apt-get update && apt-get install -y \
    python3.10 \
    python3-pip \
    nodejs \
    npm \
    nginx \
    git \
    wget \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Python 패키지 업그레이드
RUN pip3 install --upgrade pip setuptools wheel

# 작업 디렉토리 생성
WORKDIR /app

# Backend 의존성 설치
COPY backend/requirements.txt /app/backend/
RUN pip3 install --no-cache-dir -r /app/backend/requirements.txt

# vLLM 및 모델 의존성 설치
RUN pip3 install --no-cache-dir \
    vllm==0.5.4 \
    transformers==4.44.0 \
    bitsandbytes==0.43.1 \
    accelerate==0.33.0

# Frontend 빌드
COPY frontend/package*.json /app/frontend/
WORKDIR /app/frontend
RUN npm ci --only=production
COPY frontend/ /app/frontend/
RUN npm run build

# Backend 코드 복사
WORKDIR /app
COPY backend/ /app/backend/

# Nginx 설정
COPY nginx.runpod.conf /etc/nginx/sites-available/default

# 모델 다운로드 스크립트
COPY scripts/download_model.py /app/scripts/
RUN mkdir -p /workspace/models

# 정적 파일 수집
WORKDIR /app/backend
RUN python3 manage.py collectstatic --noinput

# 시작 스크립트
COPY scripts/start_runpod.sh /app/
RUN chmod +x /app/start_runpod.sh

# 포트 노출
EXPOSE 80

# 시작 명령
CMD ["/app/start_runpod.sh"]
